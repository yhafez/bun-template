{
	"name": "music-genre-classifier",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"preinstall": "npx husky install",
		"start": "bun run server.ts",
		"dev": "bun --hot run server.ts",
		"lint": "bun lint:format && vun lint:fix ",
		"lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
		"lint:format": "prettier  --config ./.prettierrc --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
		"type-check": "tsc",
		"husky:commit-msg": "sh .husky/commit-msg",
		"husky:pre-commit": "sh .husky/pre-commit"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@emotion/react": "^11.11.4",
		"@emotion/styled": "^11.11.0",
		"@fontsource/roboto": "^5.0.12",
		"@mui/icons-material": "^5.15.12",
		"@mui/material": "^5.15.12",
		"react": "18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.0.3",
		"@commitlint/config-conventional": "^19.0.3",
		"@types/bun": "^1.0.8",
		"@types/react": "^18.2.64",
		"@types/react-dom": "^18.2.21",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"bun-types": "^1.0.30",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5"
	},
	"framework": {
		"displayName": "React.js",
		"static": "public"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pnpm husky:pre-commit",
			"commit-msg": "pnpm husky:commit-msg"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,js}": [
			"eslint --config .eslintrc"
		],
		"*.{ts,tsx,js,json,html,yml,css,less,scss,md}": [
			"prettier --write"
		]
	}
}
